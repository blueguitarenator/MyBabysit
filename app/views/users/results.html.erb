<% middle do %>
  <% limiter do %>

	<h1> Search Results</h1>

	<% if @users.count > 0 %>
	    <%= @users.count %> users found

	    <table border="1" cellpadding="5">
	        <tr>
	            <th>First</th>
	            <th>Last</th>
	            <th>Email</th>
	        </tr>
	        <% @users.each do |r| %>
	            <tr>
	                <td><%= r.first_name %></td>
	                <td><%= r.last_name %></td>
	                <td><%= r.email %></td>
	                <td><%= link_to 'Add ', :controller => "users", :action => "add_friend", :id => r.id %></td>
	            </tr>
	        <% end %>
	    </table>

	    <br />
	    <br />


	<% else %>
	    No users were returned
	<% end %>

	<br /><%= link_to "My Profile", user_path(@user) %>

  <% end %>
<% end %>
