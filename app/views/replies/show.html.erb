<% middle do %>
  <% limiter do %>


	<p>
	  <b>Answer:</b>
	  <%=h @reply.answer %>
	</p>

	<p>
	  <b>Note:</b>
	  <%=h @reply.note %>
	</p>

	<% if @reply.user_id == @user.id %>
